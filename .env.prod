# Production Environment Variables
# Copy this file to .env.prod and update with your production values

# Database
POSTGRES_PASSWORD=your-super-secure-postgres-password-change-this

# Security
SECRET_KEY=your-super-secure-secret-key-minimum-32-characters-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# External Services
SENDGRID_API_KEY=your-sendgrid-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Monitoring
GRAFANA_PASSWORD=your-grafana-admin-password
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Domain Configuration
DOMAIN=your-domain.com
API_DOMAIN=api.your-domain.com
MONITORING_DOMAIN=monitoring.your-domain.com

# SSL Configuration
SSL_EMAIL=your-email@your-domain.com

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Performance Tuning
MAX_WORKERS=4
WORKER_CONNECTIONS=1000
REDIS_MAX_MEMORY=1gb
POSTGRES_MAX_CONNECTIONS=200